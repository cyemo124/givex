<% layout('layouts/boilerplate') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center">
                        <% if (user.profileImage && user.profileImage.url) { %>
                            <img src="<%= user.profileImage.url.replace('/upload/', '/upload/w_150,h_150,c_fill,g_face/') %>"
                                alt="Profile Image" class="rounded-circle mb-3" width="150" height="150">
                            <% } else { %>
                                <i class="bi bi-person-circle display-1 text-primary mb-3"></i>
                                <% } %>

                                    <h3 class="card-title mb-1">
                                        <%= user.username %>
                                    </h3>
                                    <p class="text-muted">Member since <%= user.createdAt ?
                                            user.createdAt.toDateString() : 'N/A' %>
                                    </p>
                                    <hr>

                                    <div class="mb-3">
                                        <h5 class="mb-0 text-muted">Balance</h5>
                                        <h2 class="text-success fw-bold">$<%= user.balance.toFixed(2) %>
                                        </h2>
                                        <a class="btn btn-outline-primary" href="/deposit">Deposit</a>
                                    </div>

                                    <div class="row text-start mt-4">
                                        <div class="col-6">
                                            <p class="mb-1 text-muted">Email</p>
                                            <p>
                                                <%= user.email %>
                                            </p>
                                        </div>
                                    </div>

                                    <a href="/profile/edit" class="btn btn-outline-primary mt-3">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                                    </a>
                    </div>

                    <div class="container mt-5">
                        <h4 class="text-center mb-4">Transaction History</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>May 10, 2025</td>
                                        <td>Credit</td>
                                        <td class="text-success">$100.00</td>
                                        <td>Deposit</td>
                                    </tr>
                                    <tr>
                                        <td>May 12, 2025</td>
                                        <td>Debit</td>
                                        <td class="text-danger">$25.00</td>
                                        <td>Donation to Surgery Request</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>