<% layout('layouts/boilerplate') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center">
                        <% if (user.profileImage && user.profileImage.url) { %>
                            <img src="<%= user.profileImage.url.replace('/upload/', '/upload/w_150,h_150,c_fill,g_face/') %>"
                                alt="Profile Image" class="rounded-circle mb-3" width="150" height="150">
                            <% } else { %>
                                <i class="bi bi-person-circle display-1 text-primary mb-3"></i>
                                <% } %>

                                    <h3 class="card-title mb-1">
                                        <%= user.username %>
                                    </h3>
                                    <p class="text-muted">Member since <%= user.createdAt ?
                                            user.createdAt.toDateString() : 'N/A' %>
                                    </p>
                                    <hr>

                                    <div class="mb-3">
                                        <h5 class="mb-0 text-muted">Balance</h5>
                                        <h2 class="text-success fw-bold">$<%= user.balance.toFixed(2) %>
                                        </h2>
                                    </div>

                                    <div class="row text-start mt-4">
                                        <div class="col-6">
                                            <p class="mb-1 text-muted">Email</p>
                                            <p>
                                                <%= user.email %>
                                            </p>
                                        </div>
                                    </div>

                                    <a href="/profile/edit" class="btn btn-outline-primary mt-3">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                                    </a>
                    </div>

                    <div class="container mt-5">
                        <h4 class="text-center mb-4">My Requests</h4>
                        <div class="text-center">
                            <a href="/new" class="btn btn-success mb-3">âž• Create New Request</a>
                        </div>
                        <div class="mb-3">
                            <% if (requests && requests.length> 0) { %>
                                <ul class="list-group">
                                    <% requests.forEach(request=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <%= request.title %>
                                                <a href="/request/<%= request._id %>"
                                                    class="btn btn-outline-secondary btn-sm">View</a>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    <p class="text-muted text-center">You have not made any requests yet.</p>
                                    <% } %>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>